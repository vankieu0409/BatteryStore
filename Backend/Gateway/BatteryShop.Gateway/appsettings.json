{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ElasticSearch": {
    "Uri": "http://localhost:9200"
  },
  "AllowedHosts": "*",
  "CORS": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "http://localhost:5173",
      "https://localhost:5173"
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ],
        "Metadata": {
          "RateLimiting": {
            "Policy": "identity"
          }
        }
      },
      "product-route": {
        "ClusterId": "product-cluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "order-route": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "customer-route": {
        "ClusterId": "customer-cluster",
        "Match": {
          "Path": "/api/customers/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "inventory-route": {
        "ClusterId": "inventory-cluster",
        "Match": {
          "Path": "/api/inventory/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "cart-route": {
        "ClusterId": "cart-cluster",
        "Match": {
          "Path": "/api/cart/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "promotion-route": {
        "ClusterId": "promotion-cluster",
        "Match": {
          "Path": "/api/promotions/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "notification-route": {
        "ClusterId": "notification-cluster",
        "Match": {
          "Path": "/api/notifications/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "identity": {
            "Address": "https://localhost:5001"
          }
        }
      },
      "product-cluster": {
        "Destinations": {
          "product": {
            "Address": "https://localhost:5002"
          }
        }
      },
      "order-cluster": {
        "Destinations": {
          "order": {
            "Address": "https://localhost:5003"
          }
        }
      },
      "customer-cluster": {
        "Destinations": {
          "customer": {
            "Address": "https://localhost:5004"
          }
        }
      },
      "inventory-cluster": {
        "Destinations": {
          "inventory": {
            "Address": "https://localhost:5005"
          }
        }
      },
      "cart-cluster": {
        "Destinations": {
          "cart": {
            "Address": "https://localhost:5006"
          }
        }
      },
      "promotion-cluster": {
        "Destinations": {
          "promotion": {
            "Address": "https://localhost:5007"
          }
        }
      },
      "notification-cluster": {
        "Destinations": {
          "notification": {
            "Address": "https://localhost:5008"
          }
        }
      }
    }
  },
  "JWT": {
    "SecretKey": "super_secret_key_123!@#_for_gateway_validation",
    "Issuer": "battery-shop-identity",
    "Audience": "battery-shop-clients"
  }
}
